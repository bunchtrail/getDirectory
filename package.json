{
  "name": "vscode-directory-tree",
  "displayName": "Directory Tree Formatter",
  "description": "VS Code extension for advanced directory tree formatting",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/bunchtrail/getDirectory.git"
  },
  "bugs": {
    "url": "https://github.com/bunchtrail/getDirectory/issues"
  },
  "homepage": "https://github.com/bunchtrail/getDirectory#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "directory",
    "tree",
    "file structure",
    "filesystem",
    "explorer"
  ],
  "activationEvents": [
    "onCommand:directoryTree.generateTree"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "directoryTree.generateTree",
        "title": "Generate Directory Tree"
      }
    ],
    "configuration": {
      "title": "Directory Tree",
      "properties": {
        "directoryTree.showSize": {
          "type": "boolean",
          "default": false,
          "description": "Show file sizes in tree output"
        },
        "directoryTree.aiMinimalMode": {
          "type": "boolean",
          "default": false,
          "description": "Use minimal mode for AI tree formatting"
        },
        "directoryTree.importantExtensions": {
          "type": "array",
          "default": [
            ".ts",
            ".js",
            ".json"
          ],
          "description": "List of important file extensions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --allow-missing-repository",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.x",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^2.24.0",
    "mocha": "^9.1.1",
    "typescript": "^4.5.5"
  }
}
